*
    margin 0
    padding 0

body
html
   width 100%
   height 100%

.container
    position absolute
    width 10rem
    height 15.78125rem
    overflow: hidden
    

.header
    height 11.875rem
    width 10rem
    

.bg
    height 11.875rem
    width 10rem

.bg
    .car
        height 11.875rem
        width 100%
.log
    position absolute
    z-index: 10
    left .625rem
    top 0
    height 1.5625rem
    width 1.5625rem


.header
    .rule
        position absolute
        text-align: center
        font-size: .3025rem
        color: #FFFFFF
        height 0.78125rem
        width 1.96875rem
        border-radius: 0.5rem
        border: 1px solid #FFCC00
        line-height: 0.78125rem 
        margin-left: 8.355rem
        margin-top: -0.90925rem
        letter-spacing: 1px
        cursor:pointer
 
.wrapper
    position absolute
    height 3.90625rem
    width 10rem
    background-color:#FFCC00
    margin-top: 11.875rem

.icon
    img
        position absolute
        width .78125rem
        height .78125rem
        right 0
        margin-right: .5rem
        margin-top: .5rem



.wrapper
    input
        width 4.125rem
        height 1.09375rem
        border 2px solid #D6A503
        border-radius: 5px
        font-size: 0.4rem
        text-align center;
        margin-top: .625rem
        

.wrapper
    .input
        .username
            margin-right: .3125rem
            margin-left: .625rem
            
.wrapper
    .btn
        img
            width 0.71875rem
            height 0.71875rem
            vertical-align: middle
.wrapper
    .btn
        display: inline-block
        width 8.75rem
        height 1.25rem
        line-height: 1.25rem
        background-color: #434343
        color:#FFFFFF
        font-size: .55rem
        letter-spacing: .15625rem
        text-align: center;
        margin-left: 0.625rem
        margin-top: 0.375rem

.wrapper_hide
    position absolute
    width 10rem
    height 15.78125rem
    opacity: 0.9
    background-color: #0A0C0D
    z-index: 9999

.wrapper_hide
    .head
        img
            width: 8.75rem
            margin-left: 0.625rem
            margin-top: 1.96875rem

.explain
    .active-time
        margin-left: 0.625rem
        

.explain
    h3
    span
        font-size: .3125rem
        color:#ffffff
        letter-spacing: .038125rem

.explain
    .active-detail
        margin-left: 0.625rem
        margin-top: 1rem
        width: 8.84375rem
        line-height: .55625rem

.wrapper_hide
    .close
        position absolute
        font-size: 0.625rem
        width: 0;
        height: 0;
        border-top: 100px solid #FFCC00
        border-left: 100px solid transparent; 
        top 0
        right 0
        text-align: right

.close:after
    content: 'X'
    position absolute
    font-size: .8375rem
    color: black
    margin-left: -0.8675rem
    margin-top: -1.8rem

.hide{
    display: none;
}